<div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2">
        <h1>Editing Lecture</h1>
        <hr>
        <%= form_for(@lecture) do |f| %>
            <% if @lecture.errors.any? %>
                <div id="error_explanation">
                    <h2>
                        <%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

                    <ul>
                        <% @lecture.errors.full_messages.each do |message| %>
                            <li>
                                <%= message %>
                            </li>
                            <% end %>
                    </ul>
                </div>
                <% end %>

                    <div class="field form-group">
                        <%= f.label :title %><br>
                            <%= f.text_field :title, class:'form-control' %>
                    </div>

                    <div class="field form-group">
                        <%= f.label :content %><br>
                            <%= f.cktext_area :content, :width => 100, class:'form-control', :height => 80 %>
                    </div>

                    <br>

                    <div class="form-group">
                        <%= f.label :attachment %>
                            <br>
                            <p class="help-block">Upload attachment.</p>
                            <%= f.file_field :attachment %>
                                <br>
                    </div>

                    <%= hidden_field_tag 'lecture[course_id]', params[:c_id]  if params[:c_id] != nil%>

                        <div class="actions">
                            <%= f.submit class:'btn btn-primary btn-block' %>
                        </div>
                        <% end %>
                            <hr>
    </div>
</div>
</div>