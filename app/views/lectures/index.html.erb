<p id="notice">
    <%= notice %>
</p>

<h1>Listing Lectures</h1>

<%= link_to 'New Lecture', new_lecture_path %>
    <% @lectures.each do |lecture| %>
        <h3>
            <%= lecture.title.html_safe %>
        </h3>
        <p>
            <%= lecture.body.html_safe %>
        </p>
        <%= link_to "Edit Lecture", edit_lecture_path(lecture) %>
            <% if lecture != @lectures.last %>
                <hr />
                <% end %>
                    <% end %>