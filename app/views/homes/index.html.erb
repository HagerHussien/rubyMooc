<% content_for :top_content do %>
    <section class="container">
        <div class="row">
            <div class="col-xs-12">
                <article class="page-header">
                    <% if user_signed_in? %>
                        <h1>
                            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                            <%= "Welcome " %> <span class="text-uppercase"><%= current_user.name %></span>
                        </h1>
                        <% else %>
                            <h1>
                                <%= "Welcome" %>
                            </h1>
                            <% end %>
                </article>
            </div>
        </div>



        <% if user_signed_in? %>
            <%if current_user.status === "instructor"  %>
                <div class="row">
                    <div class="col-xs-offset-4 col-xs-4">
                        <h3 align="center">
                            <%= "Instractour " %>
                                <span class="text-uppercase">
                                <%= current_user.name %> </span>! Ready to Create a Course ? </h3>
                        <%= link_to '<span class="glyphicon glyphicon-education" aria-hidden="true"></span> Create Course'.html_safe, new_course_path, class: 'btn btn-success btn-lg btn-block' %>
                    </div>
                </div>
                <% end %>
                    <% end %>
    </section>
    <div class="container">
        <div class="page-header">
            <h1 id="timeline"> <i class="glyphicon glyphicon-education"></i>Courses</h1>
        </div>



        <div class="row">
            <div class="col-sm-4 col-md-4">
                <center>
                    <div class="thumbnail">
                        <img class="media-object img img-circle" src="http://lorempixel.com/200/200/abstract/3/" alt="">
                        <div class="caption">
                            <h3>
                                <i class="glyphicon glyphicon-education"></i>
                                <%= @courses[0].title %>
                                    <small>
                                <%= "by: "+(@courses[0].user.name)%>
                                    </small>
                            </h3>
                            <p>
                                <%= @courses[0].description %>
                            </p>
                            <p>
                                <%= link_to 'View Course', course_path(@courses[0].id) , class: 'btn btn-info btn-lg btn-block' %>
                            </p>
                        </div>
                    </div>
                </center>
            </div>
            <div class="col-sm-4 col-md-4">
                <center>
                    <div class="thumbnail">
                        <img class="media-object img img-circle" src="http://lorempixel.com/200/200/abstract/3/" alt="">
                        <div class="caption">
                            <h3>
                                <i class="glyphicon glyphicon-education"></i>
                                <%= @courses[1].title %>
                                    <small>
                                <%= "by: "+(@courses[1].user.name)%>
                                    </small>
                            </h3>
                            <p>
                                <%= @courses[1].description %>
                            </p>
                            <p>
                                <%= link_to 'View Course', course_path(@courses[1].id) , class: 'btn btn-info btn-lg btn-block' %>
                            </p>
                        </div>
                    </div>
                </center>
            </div>
            <div class="col-sm-4 col-md-4">
                <center>
                    <div class="thumbnail">
                        <img class="media-object img img-circle" src="http://lorempixel.com/200/200/abstract/3/" alt="">
                        <div class="caption">
                            <h3>
                                <i class="glyphicon glyphicon-education"></i>
                                <%= @courses[2].title %>
                                    <small>
                                <%= "by: "+(@courses[2].user.name)%>
                                    </small>
                            </h3>
                            <p>
                                <%= @courses[2].description %>
                            </p>
                            <p>
                                <%= link_to 'View Course', course_path(@courses[2].id) , class: 'btn btn-info btn-lg btn-block' %>
                            </p>
                        </div>
                    </div>
                </center>
            </div>
        </div>

        <%= link_to 'View More Courses ' , courses_url, class: 'btn btn-primary btn-lg btn-block' %>


    </div>

    <% end %>